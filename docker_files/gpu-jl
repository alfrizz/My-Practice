#!/usr/bin/env bash
set -euo pipefail
export DOCKER_BUILDKIT=1

#â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“
# CONFIGURATION
#â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“
PROJECT_DIR="$HOME/ws/My-Practice"
REMOTE="gdrive:My-Practice"
DOCKERFILES="$PROJECT_DIR/docker_files"
DOCKER_IMAGE="gpu-jl-image"

#â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“
# FUNCTIONS
#â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“

sync_bisync() {
  echo
  echo "âŸ³ Two-way syncing $PROJECT_DIR â†” $REMOTE"
  rclone bisync \
    --verbose \
    --exclude "**/.ipynb_checkpoints/**" \
    "$PROJECT_DIR" \
    "$REMOTE"
}

check_changes() {
  echo
  echo "ğŸ” Scanning for code changesâ€¦"
  local changes_tmp
  changes_tmp=$(mktemp)
  rclone check \
    "$REMOTE" \
    "$PROJECT_DIR" \
    --one-way --size-only --fast-list --verbose \
    >"$changes_tmp" 2>&1

  awk '/Difference at/ { print substr($0, index($0,$4)) }' \
    "$changes_tmp" >"$changes_tmp.files"
  rm -f "$changes_tmp"
}

update_requirements() {
  if [[ -s "${changes_tmp:=}/.files" ]]; then
    echo "â–¶ï¸  Updating requirements for changed files:"
    cat "${changes_tmp}.files"
    python3 "$DOCKERFILES/update_requirements.py" \
      "${changes_tmp}.files"
  else
    echo "âœ… No code changes â†’ skipping requirements update"
  fi
  rm -f "${changes_tmp}.files"
}

build_image() {
  echo
  echo "â–¶ï¸ Building Docker image $DOCKER_IMAGE"
  docker build --pull \
    --tag "$DOCKER_IMAGE" \
    --file "$DOCKERFILES/Dockerfile" \
    "$DOCKERFILES"
}

launch_jupyter() {
  echo
  echo "ğŸš€ Launching JupyterLab"
  docker run --rm -it --name gpu-jl \
    --gpus all \
    -p 8888:8888 \
    -v "$PROJECT_DIR":/workspace \
    -w /workspace \
    "$DOCKER_IMAGE"
}

#â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“
# MAIN
#â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“â€“

if [[ "${1-}" == "--watch" ]]; then
  echo
  echo "ğŸ‘€ Watching for .py/.ipynb changes under $PROJECT_DIR â€¦"
  inotifywait -m -r \
    -e close_write,create,delete \
    --format '%w%f' \
    --exclude '(.ipynb_checkpoints|\.pyc)$' \
    "$PROJECT_DIR" \
  | while read -r changed_file; do
      echo
      echo "Detected change: $changed_file"
      sync_bisync
      check_changes
      update_requirements
      build_image
    done
else
  sync_bisync
  check_changes
  update_requirements
  build_image
  launch_jupyter
fi
