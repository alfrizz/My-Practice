  --name "$CONTAINER" \
  --shm-size=16G \
  --ipc=host \
  -v "$PROJECT:/workspace:rw" \
  -p 8888:8888 \
  gpu-jl:custom \
  bash -lc "\
    set -euo pipefail; \
    cd /workspace; \
    echo 'ðŸ”Ž Checking requirementsâ€¦'; \
    grep -vE '^\s*(#|$)' scripts/requirements.txt \
      | while read -r line; do \
          pkg=\${line%%[=<>]*}; \
          if ! pip show \$pkg >/dev/null 2>&1; then \
            echo \"ðŸ”„ Installing \$line\"; \
            pip install --no-cache-dir \"\$line\"; \
          else \
            echo \"âœ… Already installed: \$pkg\"; \
          fi; \
        done; \
    exec jupyter lab --no-browser --ServerApp.ip=0.0.0.0 --ServerApp.token=''; \
  "

